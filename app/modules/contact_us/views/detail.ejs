<% layout(layout_directory+'/mainLayout') -%>
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
  <div class="kt-subheader__main">
      <h3 class="kt-subheader__title">
          <%= page_title %>
      </h3>
      <span class="kt-subheader__separator kt-subheader__separator--v"></span>
  </div>
</div>

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
  <div class="row">
      <div class="col-lg-12">
          <div class="kt-portlet">
      <form class="kt-form kt-form--label-right" id="frmFAQ" action="#" method="POST" enctype='multipart/form-data'>


        <div class="kt-portlet__body">
            <div class="form-group row">
            <div class="col-md-6">
              <label>Name</label>
              <input type="text" name="question" disabled id="question" class="form-control" placeholder="Enter question" value="<%= response.contact_data.name %>"/>              
            </div>
            <div class="col-lg-6">
              <label>Email</label>
              <input type="text" name="question" disabled id="question" class="form-control" placeholder="Enter question" value="<%= response.contact_data.email %>"/>              
            </div>
            </div>
            
            
            
            <div class="form-group row">
              <div class="col-lg-6">
                <label>Phone</label>
                <input type="text" name="question" disabled id="question" class="form-control" placeholder="Enter question" value="<%= response.contact_data.phone %>"/>              
              </div>
             
            </div>

            <div class="form-group row">
              <div class="col-lg-12">
                <label>Message</label>
                <textarea name="answer" id="answer" class="form-control required" required placeholder="Enter answer" rows=5 disabled><%=response.contact_data.message%></textarea>
              </div>
            </div>
            
            
            
        </div>

        <div class="kt-portlet__foot">
          <div class="kt-form__actions">
            <div class="row">
              <div class="col-lg-6">
                <input type="hidden" name="id" value="<%= response._id%>">
                <!-- <button type="submit" class="btn btn-primary">Update</button> -->
                <a href="<%= generateUrl('contact.list') %>" class="btn btn-primary">Back</a>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  </div>
  </div>
  