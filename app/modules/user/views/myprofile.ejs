<% layout(layout_directory+'/mainLayout') -%>
<!-- begin:: Subheader -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title"> <%= page_title %> </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        <!-- <div class="kt-subheader__breadcrumbs">
            <a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"><%= page_title %></span>
        </div> -->
    </div>
</div>
<!-- end:: Subheader -->

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-lg-12">
            <div class="kt-portlet">
                <form class="kt-form kt-form--label-right" action="<%= generateUrl('admin.update.profile')%>" method="POST" id="frmMyProfile" enctype='multipart/form-data'>
                    <div class="kt-portlet__body">
                        <div class="form-group row">
                            <div class="col-lg-6 form-group-sub">
                                <label class="control-label asterisk">First Name:</label>
                                <input type="text" name="first_name" id="first_name" class="form-control" pattern="^$|^\S+.*" maxlength="40" title="Please enter your first name" placeholder="Enter first name" value="<%= response.first_name %>">
                            </div>
                            <div class="col-lg-6 form-group-sub">
                                <label class="control-label asterisk">Last name:</label>
                                <input type="text" name="last_name" id="last_name" class="form-control" pattern="^$|^\S+.*" title="Please enter your last name" maxlength="40" placeholder="Enter last name" value="<%= response.last_name %>">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-6 form-group-sub">
                                <label class="control-label asterisk">Email:</label>
                                <input type="text" name="email" id="email" class="form-control" maxlength="40" title="Please enter email" placeholder="Enter email" value="<%= response.email %>">
                            </div>
                            <div class="col-lg-6 form-group-sub">
                                <label class="control-label asterisk">Phone:</label>
                                <input type="text" name="phone" id="phone" class="form-control allownumericwithoutdecimal" title="Please enter your phone number" maxlength="40" placeholder="Enter phone number" value="<%= response.phone %>">
                            </div>
                        </div>
                        <div class="form-group row">
							<div class="col-lg-6">
								<input type="file" name="profile_pic" onchange="preview()" id="profile_pic" class="form-control imagepicker" accept="image/*">
							</div>
                            <div class="col-lg-6">
								<% if(response.profile_pic != '') {%>
									<img id="frame1" height="120px" src="/uploads/user/profile_pic/<%= response.profile_pic %>">
								<% } else {%>
									<img id="frame1" class="image" height="100px" src="/uploads/no-image.png">
								<% } %>
							</div>
						</div>
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <div class="row">
                                <div class="col-lg-6">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                    <a href="<%= generateUrl('user.dashboard') %>" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
	function preview() {
		frame1.src = URL.createObjectURL(event.target.files[0]);
	}
</script>