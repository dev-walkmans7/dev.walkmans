<% layout(layout_directory+'/mainLayout') -%>

<div class="kt-subheader   kt-grid__item" id="kt_subheader">
	<div class="kt-subheader__main">
		<h3 class="kt-subheader__title"> <%= page_title %> </h3>
		<span class="kt-subheader__separator kt-subheader__separator--v"></span>
		<!-- <div class="kt-subheader__breadcrumbs">
			<a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
			<span class="kt-subheader__breadcrumbs-separator"></span>
			<span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"><%= page_title %></span>
		</div> -->
	</div>
</div>

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
	<div class="row">
		<div class="col-lg-12">
			<div class="kt-portlet">
				<form class="kt-form kt-form--label-right" id="userAddFrm" action="<%= generateUrl('user.client.send') %>" method="POST">
					<div class="kt-portlet__body">
						<div class="form-group row">
							<div class="col-lg-6">
								<label for="subject" class="control-label">Subject</label>
								<div class="controls">
									<input id="subject" name="subject" type="text" placeholder="Enter subject" class="form-control allowAlphabetsOnly required" required data-validation-required-message="This field is required" value="" />
								</div>
							</div>
						</div>
					<div class="form-group row">
                          <div class="col-lg-12 form-group-sub">
                          <label for="message" class="control-label">Message</label>
                             <div class="controls">
                                <textarea name="message" id="message" class="ckeditor form-control"  placeholder="Enter message" rows=5></textarea>
							 </div>
                         </div>
                     </div>
					</div>
					<div class="kt-portlet__foot">
						<div class="kt-form__actions">
							<div class="row">
								<div class="col-lg-6">
									<input type="hidden" name="id" id="id" value="<%=data._id%>"/>
									<button type="submit" class="btn btn-primary">Save</button>
									<a href="<%= generateUrl('user.client.list') %>" class="btn btn-secondary">Cancel</a>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>